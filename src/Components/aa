const[icone, setIcone] = useState("")
const[coracao, setCoracao] = useState("")

let iconeCerto =  ! icone ? "bookmark-outline" : `${icone}`
let coracaoCorreto = ! coracao  ? "heart-outline" : `${coracao}`

function MudarIcone() {
    const novoIcone = "bookmark"
    setIcone(novoIcone)
}

function MudarCoracao() {
    const novoCoracao = "heart" 
    setCoracao(novoCoracao)
}
